{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "incremental": true,

    "declaration": true,
    "esModuleInterop":true,
    "lib": ["es2015", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "es2017",
    "jsx": "react",
    "types": [
      "node",
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "css/**/*.css",
  ]
}
